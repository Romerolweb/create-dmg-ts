{
	"name": "create-dmg",
	"version": "7.1.0",
	"description": "Create a good-looking DMG for your macOS app in seconds",
	"license": "MIT",
	"repository": "sindresorhus/create-dmg",
	"funding": "https://github.com/sponsors/sindresorhus",
	"author": {
		"name": "Sindre Sorhus",
		"email": "sindresorhus@gmail.com",
		"url": "https://sindresorhus.com"
	},
	"type": "module",
	"bin": {
		"create-dmg": "./dist/cli.js"
	},
	"engines": {
		"node": ">=22"
	},
	"scripts": {
		"build": "tsc",
		"postbuild": "node scripts/postbuild.mjs",
		"typecheck": "tsc --noEmit",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"test": "node --test dist/**/*.test.js",
		"pretest": "npm run build",
		"prepare": "husky || true"
	},
	"files": [
		"dist/**/*.js",
		"dist/**/*.d.ts",
		"assets",
		"disk-icon.icns",
		"base.r"
	],
	"keywords": [
		"cli-app",
		"cli",
		"create",
		"dmg",
		"disk",
		"image",
		"macos",
		"mac",
		"app",
		"application",
		"apple"
	],
	"dependencies": {
		"appdmg": "^0.6.6",
		"execa": "^8.0.1",
		"gm": "^1.25.0",
		"icns-lib": "^1.0.1",
		"meow": "^13.1.0",
		"ora": "^8.0.1",
		"plist": "^3.1.0",
		"tempy": "^3.1.0"
	},
	"devDependencies": {
		"@types/node": "^24.0.0",
		"@typescript-eslint/eslint-plugin": "^8.19.1",
		"@typescript-eslint/parser": "^8.19.1",
		"eslint": "^9.17.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.11",
		"typescript": "^5.7.2"
	},
	"lint-staged": {
		"*.ts": [
			"eslint --fix",
			"tsc --noEmit"
		]
	}
}
